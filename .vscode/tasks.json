{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lib test UI",
      "type": "npm",
      "script": "lib:test:ui"
    },
    {
      "label": "e2e test UI",
      "type": "npm",
      "script": "e2e:test:ui"
    },
    {
      "label": "lib lint",
      "type": "npm",
      "script": "lib:lint"
    },
    {
      "label": "lint all",
      "type": "npm",
      "script": "lint-all"
    },
    {
      "label": "sync AI",
      "type": "npm",
      "script": "sync-ai"
    },
    {
      "label": "run app test",
      "type": "npm",
      "script": "run-app-test"
    },
    {
      "label": "e2e test",
      "type": "npm",
      "script": "e2e:test",
      "presentation": {
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "build all",
      "type": "npm",
      "script": "build-all"
    },
    {
      "label": "lib test update snapshots",
      "type": "npm",
      "script": "lib:test:update"
    },
    {
      "label": "format all",
      "type": "npm",
      "script": "format-all"
    },
    {
      "label": "bump version and publish selected package",
      "type": "shell",
      "command": "node scripts/publishPackage.ts ${input:packageName} ${input:version}",
      "group": "build",
      "presentation": {
        "clear": true
      }
    }
  ],
  "inputs": [
    {
      "id": "packageName",
      "description": "Select package to publish",
      "default": "vindur",
      "type": "pickString",
      "options": [
        "vindur",
        "vite-plugin"
      ]
    },
    {
      "id": "version",
      "description": "Select version bump type",
      "default": "patch",
      "type": "pickString",
      "options": [
        {
          "label": "patch",
          "value": "patch"
        },
        {
          "label": "minor",
          "value": "minor"
        },
        {
          "label": "major",
          "value": "major"  
        }
      ]
    }
  ]
}
