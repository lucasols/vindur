{
  "name": "vindur",
  "description": "A Compile time CSS in JS library",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc --noEmit",
    "eslint": "CI=true eslint --color src/ tests/ --max-warnings 0 --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --minify --dts",
    "npm-publish": "pnpm publish --access=public",
    "pre-publish": "../scripts/check-if-is-sync.sh && pnpm build"
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "repository": "github:lucasols/vindur",
  "author": "Lucas Santos",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "colord": "catalog:"
  },
  "devDependencies": {
    "@babel/core": "catalog:",
    "@babel/generator": "catalog:",
    "@ls-stack/utils": "catalog:",
    "@types/babel__core": "catalog:",
    "@types/babel__generator": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@vitest/ui": "catalog:",
    "react": "catalog:",
    "tsm": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@babel/core": "^7.0.0",
    "react": "^19.1.0",
    "vite": "^7.0.0"
  }
}
