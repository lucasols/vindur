{
  "name": "vindur",
  "description": "A Compile time CSS in JS library",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "eslint": "CI=true eslint --color src/ --max-warnings 0 --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --minify --dts",
    "npm-publish": "pnpm publish --access=public",
    "pre-publish": "../scripts/check-if-is-sync.sh && pnpm build"
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "repository": "github:lucasols/vindur",
  "author": "Lucas Santos",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "colord": "^2.9.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/generator": "^7.28.0",
    "@ls-stack/extended-lint": "^0.49.0",
    "@ls-stack/utils": "^3.17.1",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/node": "^24.1.0",
    "@types/react": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "tsm": "^2.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@babel/core": "^7.0.0",
    "vite": "^7.0.0",
    "react": "^19.1.0"
  }
}
